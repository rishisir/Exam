        let currentAnswers = new Array(questions.length).fill(-1);
        let timeLeft = 7200; // 2 hours in seconds
        let timerInterval;

        function initExam() {
            displayQuestions();
            startTimer();
            updateProgressBar();
        }

        function displayQuestions() {
            const examContent = document.getElementById('examContent');
            let html = '';

            questions.forEach((question, index) => {
                html += `
                    <div class="question">
                        <div class="question-number">प्रश्न ${index + 1}.</div>
                        <div class="question-text">${question.q}</div>
                        <div class="options">
                            ${question.options.map((option, optIndex) => `
                                <label class="option" onclick="selectAnswer(${index}, ${optIndex})">
                                    <input type="radio" name="q${index}" value="${optIndex}">
                                    <span>${String.fromCharCode(65 + optIndex)}) ${option}</span>
                                </label>
                            `).join('')}
                        </div>
                    </div>
                `;
            });

            html += '<button class="submit-btn" onclick="submitExam()">परीक्षा सबमिट करा</button>';
            examContent.innerHTML = html;
        }

        function selectAnswer(questionIndex, optionIndex) {
            currentAnswers[questionIndex] = optionIndex;
            
            // Remove previous selection
            const questionDiv = document.querySelectorAll('.question')[questionIndex];
            questionDiv.querySelectorAll('.option').forEach(opt => opt.classList.remove('selected'));
            
            // Add selection to clicked option
            questionDiv.querySelectorAll('.option')[optionIndex].classList.add('selected');
            
            updateProgressBar();
        }

        function updateProgressBar() {
            const answered = currentAnswers.filter(answer => answer !== -1).length;
            const progress = (answered / questions.length) * 100;
            document.getElementById('progressBar').style.width = progress + '%';
        }

        function startTimer() {
            timerInterval = setInterval(() => {
                timeLeft--;
                const hours = Math.floor(timeLeft / 3600);
                const minutes = Math.floor((timeLeft % 3600) / 60);
                const seconds = timeLeft % 60;
                
                document.getElementById('timer').textContent = 
                    `वेळ: ${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
                
                if (timeLeft <= 0) {
                    submitExam();
                }
            }, 1000);
        }

        function submitExam() {
            clearInterval(timerInterval);
            
            let score = 0;
            questions.forEach((question, index) => {
                if (currentAnswers[index] === question.correct) {
                    score += 2;
                }
            });

            displayResults(score);
        }

        function displayResults(score) {
            document.getElementById('examContent').style.display = 'none';
            const resultsDiv = document.getElementById('results');
            resultsDiv.style.display = 'block';
            
            document.getElementById('finalScore').textContent = `${score}/100`;
            
            const percentage = score;
            let grade, message, gradeClass;
            
            if (percentage >= 90) {
                grade = 'उत्कृष्ट!';
                message = 'तुमची कामगिरी अप्रतिम आहे!';
                gradeClass = 'excellent';
            } else if (percentage >= 75) {
                grade = 'चांगले!';
                message = 'तुमची कामगिरी चांगली आहे!';
                gradeClass = 'good';
            } else if (percentage >= 50) {
                grade = 'सरासरी';
                message = 'आणखी मेहनत करा!';
                gradeClass = 'average';
            } else {
                grade = 'अधिक मेहनत हवी';
                message = 'आणखी अभ्यास करा!';
                gradeClass = 'poor';
            }
            
            const gradeElement = document.getElementById('grade');
            gradeElement.textContent = grade;
            gradeElement.className = `grade ${gradeClass}`;
            document.getElementById('message').textContent = message;
        }

        function restartExam() {
            currentAnswers = new Array(questions.length).fill(-1);
            timeLeft = 7200;
            document.getElementById('results').style.display = 'none';
            document.getElementById('examContent').style.display = 'block';
            initExam();
        }

        // Initialize exam when page loads
        window.onload = function() {
            initExam();
        };
    </script>
</body>
</html>
